#include <iostream>  
#include <cmath>  
using namespace std;
int main() {  
 setlocale(LC_ALL, "Russian");  
 float a, b, c, x1, x2, D;  
 x1 = 0;  
 x2 = 0;  
 cout << "Введите коэффициeнты квадратного ypавнения:";  
 cin >> a >> b >> c;  
 if (a == 0 && b == 0 && c == 0) std::cout << "X - любое число";  
 if (((c == 0 && b == 0) && a != 0) || ((c == 0 && a == 0) && b != 0)) {  
  cout << "X = 0";  
 }  
 else if (((a == 0 && b == 0) && c != 0)) {  
  cout << "Уравнение не имеет корней";  
 }  
 if ((b != 0 && c != 0) && a == 0) {  
  x1 = (-c) / b;  
  cout << x1;  
 }  
 if ((a != 0 && c != 0) && b == 0) {  
  if (c <= 0) {  
   x2 = sqrt((-c) / a);  
   cout << x2;  
  }  
  else {  
   cout << "Не имеем корней";  
  }  
 }  
 if ((a != 0 && b != 0) && c == 0) {  
  x1 = 0;  
     x2 = (-b) / a;  
     cout << x1 << " и " << x2;   
 }  
 if (a != 0 && b != 0 && c != 0) {  
  D = b * b - 4 * a * c;  
  if (D > 0) {  
   x1 = ((-b) + sqrt(D)) / 2 * a;  
   x2 = ((-b) - sqrt(D)) / 2 * a;  
   cout << x1 << x2;  
  }  
  else if (D == 0) {  
   x1 = (-b) / 2 * a;  
   cout << x1;  
  }  
  else {  
  cout << "корней нет";  
  }  
 }  
 return 0;
}
